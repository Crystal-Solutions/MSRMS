<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Player" table="player">
    <indexes>
      <index name="fk_player_department1_idx" columns="department_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="140" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="year" type="integer" column="year" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="dateOfBirth" type="date" column="date_of_birth" nullable="true"/>
    <field name="address" type="string" column="address" length="256" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="bloodType" type="string" column="blood_type" length="3" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="playercol" type="string" column="playercol" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="department" target-entity="Department" fetch="LAZY">
      <join-columns>
        <join-column name="department_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
