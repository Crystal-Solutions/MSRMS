<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\PlayerInvolvedInSport" table="player_involved_in_sport">
    <indexes>
      <index name="fk_player_has_sport_sport1_idx" columns="sport_id"/>
      <index name="fk_player_has_sport_player1_idx" columns="player_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="startedDate" type="date" column="started_date" nullable="false"/>
    <field name="endDate" type="date" column="end_date" nullable="true"/>
    <field name="position" type="string" column="position" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="sport" target-entity="Sport" fetch="LAZY">
      <join-columns>
        <join-column name="sport_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="player" target-entity="Player" fetch="LAZY">
      <join-columns>
        <join-column name="player_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
