{# app/Resources/views/default/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
Allocated resources to sports
{% endblock %}

{% block links %}
    <div class="btn-group" >
       <a href="{{url('allocate_resource')}}"> <button type="button" class="btn btn-xs btn-success">Allocate resource</button></a>
    </div>
{% endblock %}


{% block body %}
<table width="100%">
	<tr>
		<th>Resource Name</th>
        <th>Sport Name</th>
        <th>Auth. Officer Name</th>
        <th>Actions</th>
	</tr>

    {% for shs in sportHasResources %}
        <tr>
        <td>{{ shs.resourceName|e}}
        </td>
        
        <td>
            {{ shs.sportName|e}}
        </td>

		<td>{{ shs.authorizingOfficerName|e }}
        </td>

        <td>
        <div class="btn-group" >

            <a href="{{ url('sportHasResource_view', {'id':shs.id}) }}"><button type="button" class="btn btn-xs btn-success">View</button></a>

            <a href="{{ url('allocate_resource_addtimeslot', {'id':shs.id}) }}"><button type="button" class="btn btn-xs btn-primary">Add Time Slots</button></a>

            <a onclick="if(confirm('Are you sure you want to delete?')) window.location.assign('{{url('sportHasResource_delete',{'id':shs.id})}}')"> <button type="button" class="btn btn-xs btn-danger">Delete</button></a>


        </div>
        </td>


    {% endfor %}
</table>


{% endblock %}

