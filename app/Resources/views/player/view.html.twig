
{# app/Resources/views/player/view.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
Player Details
{% endblock %}

{% block links %}
    <div class="btn-group" >
       <a href="{{url('player_update',{'id':player.id})}}"> <button type="button" class="btn btn-xs btn-warning">Update Player
       </button></a>
    </div>

    <div class="btn-group" >
       <a href="{{url('achievement_create_single',{'p_id':player.id})}}"> <button type="button" class="btn btn-xs btn-info">Add Achievement</button></a>
    </div>
{% endblock %}


{% block body %}

<table style="width:100%">

  <tr>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <td><b>Index Number:</td>
    <td>{{player.indexNumber}}</td>
  </tr>
  <tr>
    <td><b>Name:</td>
    <td>{{player.name}}</td>
  </tr>
   <tr>
    <td><b>Date of Birth:</td>
    <td>{{player.dateOfBirth | date('Y-m-d') }}</td>
  </tr>
   <tr>
    <td><b>Year:</td>
    <td>{{player.year}}</td>
  </tr>
   <tr>
    <td><b>Faculty:</td>
    <td>{{player.facultyName}}</td>
  </tr>
   <tr>
    <td><b>Department Name:</td>
    <td>{{player.departmentName}}</td>
  </tr>
   <tr>
    <td><b>Address:</td>
    <td>{{player.address}}</td>
  </tr>

   <tr>
    <td><b>Blood Type:</td>
    <td>{{player.bloodType}}</td>
  </tr>

  <tr>
  <td><b>Achievements:</td>
<td>
<table style="width:100%">
{%for ach in achievements %}
 <tr>
 <td>
 <a href="{{url('achievement_view',{'id':ach.id})}}">{{ ach.title|e }}</a>
 </td>
 </tr>
{% endfor %}
</table>
</td>
  </tr>






  <tr>
  <td><b>Involved Sports:</td>
<td>
<table style="width:100%">
{%for sport in sports %}


 <tr>
 <td>
  <a href="{{url('sport_view',{'id':sport.id})}}">{{ sport.name|e }}</a>
 {%if sport.endDate !=null %} <b>(Involvement Finished){% endif %}
 </td>
 </tr>
{% endfor %}
</table>
</td>
  </tr>



<tr>
<td><b>Borrowed Equipments</td>
<td>
<table style="width:100%">
{%for eq in borrowedEquipments %}
 <tr>
 <td>
 <a href="{{url('equipment_view',{'id':eq.id})}}">{{ eq.name|e }}</a>
  {%if eq.returnedTime !=null %} <b>(Equipment Returned){% endif %}
 </td>
 </tr>
{% endfor %}
</table>
</td>
</tr>



<tr>
<td><b>Reserved Equipments:</td>
<td>
<table style="width:100%">
{%for eq in reservedEquipments  %}
 <tr>
 <td>
 <a href="{{url('equipment_view',{'id':eq.id})}}">{{ eq.name|e }}</a>
 </td>
 </tr>
{% endfor %}
</table>
</td>
</tr>




</table>

{% endblock %}
